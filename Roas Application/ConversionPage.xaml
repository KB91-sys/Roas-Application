<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roas_Application.ConversionPage">
    
    <ContentPage.Content>
        
        <StackLayout Margin="{StaticResource MarginResource}">
            <Label
                Style="{StaticResource DefaultLabelStyle}">Conversion rate</Label>
            <Entry Placeholder="Number of visitors..."
               x:Name="VisitorsEntry" Keyboard="Numeric"/>
            <Entry Placeholder="Conversion rate... (%)"
               x:Name="ConversionRateEntry" Keyboard="Numeric"/>
            <Button Text="Calculate"
                Clicked="OnCalculateButton_clicked"></Button>
            <Button
                Text="Clear"
                Clicked="OnClearButton_clicked"></Button>
            <Label
                x:Name="res"
                Text=""
                Style="{StaticResource DefaultLabelStyle}">
            </Label>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>