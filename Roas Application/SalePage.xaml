<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Roas_Application.SalePage">
    
    <ContentPage.Content>
        <StackLayout Margin="{StaticResource MarginResource}">
            <Label
                Style="{StaticResource DefaultLabelStyle}">Sales</Label>
            <Entry
                Placeholder="Average order value..."
                x:Name="aov"
                Keyboard="Numeric"/>
            <Entry
                Placeholder="Conversions..."
                x:Name="conversions" 
                Keyboard="Numeric"/>
            <Button
                Text="Calculate"
                Clicked="OnCalculateButton_Clicked"></Button>
            <Button
                Text="Clear"
                Clicked="OnClearButton_clicked"></Button>
            <Label
                x:Name="res"
                Style="{StaticResource DefaultLabelStyle}"
            ></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>